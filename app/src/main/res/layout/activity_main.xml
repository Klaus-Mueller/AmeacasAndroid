<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.pc.ameacasambientais.MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="368dp"
        android:layout_height="31dp"
        android:layout_marginTop="16dp"
        android:text="Ameaças Ambientais"
        android:textAlignment="center"
        android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="8dp" />

    <Button
        android:id="@+id/button"
        android:layout_width="325dp"
        android:layout_height="50dp"
        android:layout_marginRight="29dp"
        android:layout_marginTop="11dp"
        android:onClick="cadastraAmeacas"
        android:text="Cadastrar Ameaças"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        android:layout_marginEnd="29dp" />

    <Button
        android:id="@+id/button2"
        android:layout_width="325dp"
        android:layout_height="50dp"
        android:layout_marginEnd="29dp"
        android:layout_marginRight="29dp"
        android:layout_marginTop="12dp"
        android:onClick="listaAmeacas"
        android:text="Listar ameaças"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="308dp"
        android:text="Criador: Klaus Mueller"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@+id/button2"
        tools:layout_editor_absoluteX="8dp" />

</android.support.constraint.ConstraintLayout>
